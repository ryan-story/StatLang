{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "types": ["vscode", "node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test", "out"]
}
